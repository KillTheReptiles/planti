<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="571dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="225dp"
                android:layout_height="218dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/_3318fe4ae41bb89b5c7b5314bbd07e37b6eb251v2_00"
                tools:srcCompat="@drawable/_3318fe4ae41bb89b5c7b5314bbd07e37b6eb251v2_00" />

            <Button
                android:id="@+id/btnEditarFoto"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:text="Cambiar foto"
                android:textColor="#0C883B" />
        </LinearLayout>

        <EditText
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Juan Pérez"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tvEmail"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="juanp@gmail.com"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tvDescripcion"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Me gusta la jardinería, en especial cultivar lechugas"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="358dp"
            android:layout_height="153dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="177dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#DD0000"
                android:text="Cancelar" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="169dp"
                android:layout_height="60dp"
                android:text="Guardar" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>